			<property name="userLoginPath" value="/login.htm"></property>
			<property name="userDeniedPage" value="/403"></property>
			<property name="outServicePage" value="/outService"></property>
			<property name="userLoginReturnParameterName" value="returnurl"></property>
		</bean>
		-->
	<!-- remoting service bean -->

	<import resource="web-validation.xml" />
</beans>
